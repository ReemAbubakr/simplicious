<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Books</title>
    <link rel="stylesheet" href="/css/book.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('../../partials/header') %>

    <main>
        <div class="title-section">
            <h1 class="title">Cooking Books Recommended by Our Chefs</h1>
        </div>

        <section class="book-list">
            <% books.forEach(book => { %>
                <div class="book-item">
                    <div class="book-image-container">
                        <img src="<%= book.imagePath %>" alt="<%= book.altText %>" class="book-image">
                    </div>
                    <div class="book-details">
                        <h2 class="book-title"><%= book.title %></h2>
                        <div class="book-actions">
                            <a href="/books/<%= book._id %>" class="details-btn">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <button class="book-action-btn wishlist-btn" data-id="<%= book._id %>">
                                <i class="far fa-heart"></i> Wishlist
                            </button>
                            <button id="add-to-cart-btn" class="btn btn-primary" data-id="<%= book._id %>" data-price="<%= book.price %>" data-image="<%= book.imagePath %>" aria-label="Add <%= book.title %> to cart">
                           <i class="fas fa-cart-plus"></i> Add to Cart
                                 </button>

                             <a href="/cart" class="btn btn-success" id="goto-cart-btn" style="display: none;" aria-label="View Cart">
                             <i class="fas fa-check"></i> View Cart
                                </a>

                        </div>
                    </div>
                </div>
            <% }); %>
        </section>
    </main>

    <%- include('../../partials/footer') %>

    <script src="/js/book-list.js"></script>
</body>
</html>