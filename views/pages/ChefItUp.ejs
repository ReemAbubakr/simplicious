<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Chef It Up – Emoji Checkboxes</title>
    <link rel="stylesheet" href="public\css\ChefItUp.css">
</head>

<body>
    <header>
        <h1>Simplicious</h1>
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Recipes</a></li>
                <li><a href="#">Features</a></li>
                <li><a href="#">Hotline</a></li>
            </ul>
        </nav>
        <div class="auth-buttons">
            <button class="login">Login</button>
            <button class="signup">Sign Up</button>
        </div>
    </header>

    <h1>🥕 Chef It Up</h1>
    <p>Select at least 3 ingredients you have</p>

    <div class="progress-text" id="progressText">Select at least 3 ingredients to continue.</div>
    <div class="progress-container">
        <div class="progress-bar" id="progressBar"></div>
    </div>

    <div class="ingredients-grid" id="ingredientGrid">
        <!-- Ingredient checkboxes -->
        <% const ingredients = [
            { emoji: "🧅", name: "Onion" },
            { emoji: "🍅", name: "Tomato" },
            { emoji: "🥔", name: "Potato" },
            { emoji: "🧄", name: "Garlic" },
            { emoji: "🥕", name: "Carrot" },
            { emoji: "🧈", name: "Butter" },
            { emoji: "🐔", name: "Chicken" },
            { emoji: "🍝", name: "Pasta" },
            { emoji: "🧀", name: "Cheese" },
            { emoji: "🥚", name: "Egg" },
            { emoji: "🌽", name: "Corn" },
            { emoji: "🫘", name: "Beans" },
            { emoji: "🍞", name: "Bread" },
            { emoji: "🍚", name: "Rice" },
            { emoji: "🧃", name: "Milk" },
            { emoji: "🧂", name: "Salt" },
            { emoji: "🫑", name: "Bell Pepper" },
            { emoji: "🥒", name: "Cucumber" },
            { emoji: "🥬", name: "Lettuce" },
            { emoji: "🥩", name: "Beef" }
        ]; %>

            <% ingredients.forEach(ingredient => { %>
                <label class="ingredient">
                <input type="checkbox" value="<%= ingredient.name %>" /> 
                <%= ingredient.emoji %> <%= ingredient.name %>
            </label>
                <% }); %>
    </div>

    <br>
    <button class="submit-btn" id="submitBtn" disabled>Find Recipes</button>
    <button class="submit-btn" id="resetBtn">Reset</button>

    <div class="results" id="results"></div>

    <script>
        src = "public\js\ChefItUp.js"
        defer
    </script>
</body>

</html>