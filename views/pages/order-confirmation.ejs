<%- include('../partials/header', { title: 'Order Confirmation', currentPage: 'confirmation', flashMessages }) %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <% if (flashMessages.success) { %>
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i> <%= flashMessages.success %>
                    </div>
                <% } %>

                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2><i class="bi bi-check-circle"></i> Order Confirmed</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                        </div>
                        <h3 class="mb-3">Thank you for your order!</h3>
                        <p class="lead">Your order has been placed successfully.</p>
                        <p>We've sent a confirmation email to <strong><%= email %></strong></p>
                        
                        <hr class="my-4">
                        
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="/books " class="btn btn-outline-primary">
                                <i class="bi bi-book"></i> Continue Shopping
                            </a>
                            <a href="/orders" class="btn btn-primary">
                                <i class="bi bi-receipt"></i> View Your Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>