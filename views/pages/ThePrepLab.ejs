<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Prep Lab | Simplicious</title>
    <link rel="stylesheet" href="public\css\ThePrepLab.css">
</head>

<body>
    <h1 class="page-title">The Prep Lab</h1>

    <div class="features-container">
        <% const features = [
            { 
                title: "Chef It Up", 
                path: "/chef-it-up",
                image: "/images/chefitup-preview.jpg",
                alt: "Ingredient matching game",
                description: "Find recipes using what you have"
            },
            { 
                title: "Feelin' Risky", 
                path: "/feelin-risky",
                image: "/images/risky-preview.jpg",
                alt: "Random recipe selector",
                description: "Let chance pick your next meal" 
            },
            { 
                title: "Mix & Mellow", 
                path: "/mix-mellow",
                image: "/images/mellow-preview.jpg",
                alt: "Meal planning tool",
                description: "Plan your weekly meals"
            }
        ]; %>

            <% features.forEach(feature => { %>
                <a href="<%= feature.path %>" class="feature-card">
                <img src="<%= feature.image %>" alt="<%= feature.alt %>" class="feature-image">
                <div class="feature-content">
                    <h2 class="feature-title"><%= feature.title %></h2>
                    <p class="feature-description"><%= feature.description %></p>
                </div>
            </a>
                <% }); %>
    </div>

    <!-- Optional Recipe Preview Section -->
    <% if (featuredRecipes && featuredRecipes.length) { %>
        <div class="recipe-preview">
            <h2>Today's Featured Recipes</h2>
            <div class="recipes-grid">
                <% featuredRecipes.forEach(recipe => { %>
                    <div class="recipe-card">
                        <img src="<%= recipe.imageUrl || '/images/default-food.jpg' %>" alt="<%= recipe.name %>">
                        <h3>
                            <%= recipe.name %>
                        </h3>
                    </div>
                    <% }); %>
            </div>
        </div>
        <% } %>
</body>

</html>